#!/bin/sh

BASE_DIR=$(dirname "$0")
PROJECT_DIR=${1}
if [ ${PROJECT_DIR} = "" ]
then
    PROJECT_DIR="."
fi

mkdir -p ${PROJECT_DIR}

cp ${BASE_DIR}/akbar ${PROJECT_DIR}/akbar
cp ${BASE_DIR}/package.json ${PROJECT_DIR}/package.json
cp ${BASE_DIR}/config.template.json ${PROJECT_DIR}/config.json
cd ${PROJECT_DIR}
git init
npm install